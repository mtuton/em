    <style name="ThemeNoTitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="EmailTextAppearanceMiddle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@touchwiz:color/tw_textappearance_listtwolineprimary</item>
    </style>
