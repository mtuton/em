        <item name="android:textSize">16.0sp</item>
    </style>
    <style name="TextAppearance.SearchResult.Subtitle" parent="@style/TextAppearance.SearchResult">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>
    <style name="IconPopupMenu">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="IconPopupMenuAboveAnimation">
        <item name="android:windowEnterAnimation">@anim/icon_popup_menu_above_enter</item>
        <item name="android:windowExitAnimation">@anim/icon_popup_menu_above_exit</item>
    </style>
    <style name="IconPopupMenuBelowAnimation">
        <item name="android:windowEnterAnimation">@anim/icon_popup_menu_below_enter</item>
        <item name="android:windowExitAnimation">@anim/icon_popup_menu_below_exit</item>
    </style>
    <style name="Mailboxes_List_Appear" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/mailboxes_list_appear</item>
        <item name="android:windowExitAnimation">@anim/mailboxes_list_disappear</item>
    </style>
    <style name="TallTitleBarTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>